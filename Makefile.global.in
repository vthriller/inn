##  $Id$

## This file is meant to be the central Makefile that configure works with
## and that all other Makefiles include

##  If you have a parallel make, set this to "&"
#P	= &

##  What flags to use if profiling; -p or -pg, e.g.
#PROF	= -pg

##  How to make a lint library; pick BSD, SYSV, or NONE.
LINTLIBSTYLE	= NONE
##  Flags for lint.  AIX wants "-wkD"; it and others don't want "-z".
LINTFLAGS	= -b -h -z  -I../include $(DEFS)
##  Some lints insist on putting out the filename and other crap.
##  Possible values:
##      LINTFILTER              | sed -n -f ../sedf.aix
##      LINTFILTER              | sed -n -f ../sedf.osx
##      LINTFILTER              | sed -n -f ../sedf.sun
##      LINTFILTER              | sed -n -f ../sedf.sysv
LINTFILTER	= | sed -n -f ../sedf.sun

##  Ctags command.  Use echo if you don't have ctags.
CTAGS		= /usr/bin/ctags -t -w

# Values below this point are generally set by configure ... you shouldn't
# need to look before here .. you can though, if you really want

CC	= @CC@
CFLAGS	= -I../include @CPPFLAGS@ @CFLAGS@
LDFLAGS	= @LDFLAGS@
LIBS	= @LIBS@
PERLLIB	= @PERL_LIB@
PERLINC	= @PERL_INC@
EXTRA_SRC = @EXTRA_SRC@

NEWSGROUP	= @NEWSGRP@
OWNER		= -O @NEWSUSER@ -G $(NEWSGROUP)
ROWNER		= -O @NEWSUSER@ -G uucp

PATHNEWS = @prefix@
PATHBIN = @prefix@/bin
PATHETC = @prefix@/etc
PATHCONTROL = $(PATHBIN)/control
PATHFILTER = $(PATHBIN)/filter
PATHRUN = @prefix@/run
PATHLOG = @LOGDIR@
PATHDB = @prefix@/db
PATHSPOOL = @SPOOLDIR@
PATHARTICLES = $(PATHSPOOL}/articles
PATHOVERVIEW = $(PATHSPOOL)/overview
PATHOUTGOING = $(PATHSPOOL)/outgoing
PATHINCOMING = $(PATHSPOOL)/incoming
PATHARCHIVE = $(PATHSPOOL)/archive

MAN1    = @MANDIR@/man1
MAN3    = @MANDIR@/man3
MAN5    = @MANDIR@/man5
MAN8    = @MANDIR@/man8

LEX	= @LEX@ 
YACC	= @YACC@
RANLIB	= @RANLIB@
AWK	= @_PATH_AWK@

SHELL	= /bin/sh
@SET_MAKE@
LIBNEWS	= ../libstorage.a ../libinn.a
LINTLIB	= ../llib-linn.ln

DESTDIR =
D	= $(DESTDIR)

