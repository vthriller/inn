##  $Id$

## This file is meant to be the central Makefile that configure works with
## and that all other Makefiles include

##  If you have a parallel make, set this to "&"
P	= # &

##  What flags to use if profiling; -p or -pg, e.g.
PROF	= #-pg

##  If you use the standard NNTP way of connecting, where is the library?
NNTPLIB 	=

# Values below this point are generally set by configure ... you shouldn't
# need to look before here .. you can though, if you really want

CC		= @CC@
LIBTOOL		= @LIBTOOL@
UPLIBTOOL 	= @UPLIBTOOL@
EXTOBJ  	= @EXTOBJ@
EXTLIB  	= @EXTLIB@
LIBCC		= $(LIBTOOL) @CC@
LIBCCWITHOUTLIBTOOL	= @CC@
UPLIBCC		= $(UPLIBTOOL) @CC@
OUTPUT_OPTION	=
GCFLAGS		= -I../include @CPPFLAGS@ @THREADFLAGS@ @CFLAGS@ $(LFS_CFLAGS)
LFS_CFLAGS 	= @LFS_CFLAGS@
LDFLAGS		= @LDFLAGS@ $(LFS_LDFLAGS)
LFS_LDFLAGS 	= @LFS_LDFLAGS@
LIBS		= @LIBS@ $(LFS_LIBS)
LFS_LIBS 	= @LFS_LDFLAGS@
THREAD_LIBS 	= @THREADLIB@

LIBNEWS         = ../storage/libstorage.$(EXTLIB) ../lib/libinn.$(EXTLIB)

PERLLIB		= ../lib/perl.o @PERL_LIB@
PERLINC		= @PERL_INC@

TCLLIB		= @TCL_LIB@
TCLINC		= @TCL_INC@

PYTHONLIB 	= @PYTHON_LIB@
PYTHONINC 	= @PYTHON_INC@

DBMLIB 		= @DBM_LIB@

LEX             = @LEX@ 
YACC            = @YACC@
RANLIB          = @RANLIB@
AWK             = @_PATH_AWK@

# Ctags command.  Use echo if you don't have ctags.
CTAGS           = @CTAGS@

OWNER		= -O @NEWSUSER@ -G @NEWSGRP@
ROWNER		= -O @NEWSUSER@ -G @RNEWSGRP@
NEWSGROUP	= @NEWSGRP@

INEWSMODE	= @INEWSMODE@
RNEWSMODE	= @RNEWSMODE@

PATHNEWS        = @prefix@
PATHBIN         = @bindir@
PATHETC         = @ETCDIR@
PATHLIB         = @LIBDIR@
PATHCONTROL     = @CONTROLDIR@
PATHFILTER      = @FILTERDIR@
PATHRUN         = @RUNDIR@
PATHLOG         = @LOGDIR@
PATHDB          = @DBDIR@
PATHSPOOL       = @SPOOLDIR@
PATHARTICLES    = $(PATHSPOOL)/articles
PATHOVERVIEW    = $(PATHSPOOL)/overview
PATHOUTGOING    = $(PATHSPOOL)/outgoing
PATHINCOMING    = $(PATHSPOOL)/incoming
PATHARCHIVE     = $(PATHSPOOL)/archive

MAN1            = @mandir@/man1
MAN3            = @mandir@/man3
MAN5            = @mandir@/man5
MAN8            = @mandir@/man8

# Pick on of SOURCE, NROFF-PACK or NROFF-PACK-SCO
MANPAGESTYLE	= SOURCE

SHELL           = /bin/sh

@SET_MAKE@

DESTDIR         =
D               = $(DESTDIR)

# Standard library functions that your system doesn't have.
MISSING_MAN     = @MISSING_MAN@
MISSING_SRC     = @MISSING_SRC@
MISSING_OBJ     = @MISSING_OBJ@
