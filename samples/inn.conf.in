##  $Revision$
##  inn.conf -- inn configuration data
##  Format:
##	<parameter>:<whitespace><value>
##
##  See the inn.conf(5) man page for a full description of each
##  of these options
##
##  Blank values are allowed for certain parameters
## ---------------------------------
# All parameters must exist
#
organization:		A poorly-installed InterNetNews site
server:			localhost
pathhost:		@HOSTNAME@
#
# ---------------------------------
#
#moderatormailer:	%s@moderators.uu.net
moderatormailer:
domain:
fromhost:
pathalias:
complaints:
mta:			@SENDMAIL@ -oi %s
mailcmd:		@prefix@/bin/innmail
checkincludedtext:	no
maxforks:		10
maxartsize:		1000000
nicekids:		4
verifycancels:		no
logcancelcomm:		no
wanttrash:		no
remembertrash:		yes
linecountfuzz:		yes
peertimeout:		3600
clienttimeout:		600
allownewnews:		yes
localmaxartsize:	1000000
logartsize:		yes
logipaddr:		yes
logsitename:		yes
maxconnections:		50
artcutoff:		14
icdsynccount:		10
hiscachesize:		0
readertrack:		no
strippostcc:		no
status:			0
timer:			0
allowreaders:		yes
extendeddbz:		no
nnrpdoverstats:		no
backoff_auth:		no
backoff_db:		@DBDIR@/backoff
backoff_postfast:	0L
backoff_postslow:	1L
backoff_trigger:	10000L
mimeversion:
mimecontenttype:
mimeencoding:
#
# 
# These options are unlikely to need changing in most situations
#
chaninacttime:		600
chanretrytime:		300
pauseretrytime:		300
nntplinklog:		no
nntpactsync:		200
badiocount:		5
blockbackoff:		120
#
# ---------------------------------
# Changing these options can have an effect on the way articles are
# stored and may require recreating the spool and/or database files
#
wireformat:		no
xrefslave:		no
nnrpdposthost:
spoolfirst:		no
writelinks:		yes
storageapi:		no
articlemmap:		no
overviewmmap:		yes
bindaddress:		all
port:			119
#
## Keywords-in-overview options
## Enabling this without stopping innd and deleting the existing overview
## database and adding  will probably confuse a lot of things. You must 
## have compiled this support in too.
#
keywords:		false.
keylimit:		512
keyartlimit:		100000
keymaxwords:		250
#
# Other options
innflags:		
doinnwatch:		yes
#
# ---------------------------------
# Paths to various aspects of the news system
#
pathnews:		@prefix@
pathbin:		@prefix@/bin
pathfilter:		@prefix@/bin/filter
pathcontrol:		@prefix@/bin/control
pathdb:			@DBDIR@
pathetc:		@ETCDIR@
pathrun:		@RUNDIR@
pathlog:		@LOGDIR@
pathhttp:		@LOGDIR@
pathspool:		@SPOOLDIR@
patharticles:		@SPOOLDIR@/articles
pathoverview:		@SPOOLDIR@/overview
pathoutgoing:		@SPOOLDIR@/outgoing
pathincoming:		@SPOOLDIR@/incoming
patharchive:		@SPOOLDIR@/archive
overviewname:		.overview
#
# ---------------------------------
#
