$sort = "@_PATH_SORT@" ;
$getftp = "@GETFTP@" ;
$compress = "@COMPRESS@" ;
$log_compress = "@LOG_COMPRESS@" ;
$z = "@LOG_COMPRESSEXT@" ;

($tempsock = "${innddir}/ctlinndXXXXXX") =~ s!.*/(.*)XXXXXX$!$1*! ;
($tempsockdir = "${innddir}/ctlinndXXXXXX") =~ s!/[^/]*$!! ;

$have_uustat = ("@HAVE_UUSTAT@" eq "DO" ? 1 : 0) ;

$newsmaster = '@NEWSMASTER@' ;
$newsuser = "@NEWSUSER@" ;

$ENV{'TMPDIR'} = $pathtmp;
